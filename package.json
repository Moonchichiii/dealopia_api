{
  "name": "dealopia-monorepo",
  "private": true,
  "packageManager": "bun@1.1.38",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter \"*\" dev",
    "api:dev": "cd apps/api && uv run manage.py runserver",
    "client:dev": "bun --cwd apps/client dev",
    "build": "bun run --filter \"*\" build",
    "test": "bun run --filter \"*\" test",
    "lint": "bun run --filter \"*\" lint",
    "format": "bun run --filter \"*\" format"
  }
}